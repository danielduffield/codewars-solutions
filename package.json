{
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "cover": "nyc --reporter=lcov npm run test:mocha",
    "lint": "run-p lint:*",
    "lint:html": "htmlhint ./**/*.html",
    "lint:css": "stylelint ./**/*.css",
    "lint:js": "eslint ./**/*.js",
    "test": "npm run lint",
    "test:mocha": "mocha test --recursive -R nyan",
    "precommit": "npm test",
    "bundle": "browserify -t babelify client/main.js -o server/public/bundle.js",
    "postinstall": "browserify -t babelify client/main.js -o server/public/bundle.js",
    "start": "node server/index.js",
    "watch:client": "watchify -t babelify client/main.js -v -o server/public/bundle.js",
    "watch:server": "nodemon server/index.js",
    "watch": "run-p watch:client watch:server"
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "eslint": "3.19.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-node": "4.2.2",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "7.0.1",
    "eslint-plugin-standard": "3.0.1",
    "htmlhint": "0.9.13",
    "husky": "0.13.4",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "4.0.2",
    "nyc": "^11.1.0",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "request": "^2.81.0",
    "showdown": "^1.7.4",
    "styled-components": "^2.1.2"
  }
}
